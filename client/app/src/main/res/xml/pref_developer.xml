<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="pk_enable_database"
        android:title="Enable Database"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="pk_send_invitations_to_self"
        android:title="Send invitations to self"/>

    <EditTextPreference
        android:defaultValue="3000"
        android:title="Port"
        android:key="pk_port"
        android:inputType="number"/> <!-- pk means preference key-->

    <EditTextPreference
        android:defaultValue="192.3.135.177"
        android:title="Host"
        android:key="pk_host"
        android:inputType="text"/>

    <EditTextPreference
        android:defaultValue="555-555-5555"
        android:title="Phone"
        android:key="pk_phone"
        android:inputType="text"/>

    <Preference android:title="Rebuild Database"
        android:key="pk_rebuild_database" />

    <Preference android:title="Add a Contact"
        android:summary="Create a fake contact for testing and demonstration purposes. This contact will not be able to send or receive messages."
        android:key="pk_add_contact" />

</PreferenceScreen>
